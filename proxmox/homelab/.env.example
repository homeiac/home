# Proxmox API Token
API_TOKEN=root@pam!provision-manage-vms=YOUR_TOKEN_HERE

# VM Defaults
ISO_NAME=noble-server-cloudimg-amd64.img
ISO_URL=https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img

# Node configurations (based on your home lab setup)
# Add nodes sequentially starting from NODE_1
NODE_1=pve
STORAGE_1=local-zfs
CPU_RATIO_1=0.7
MEMORY_RATIO_1=0.7
IMG_STORAGE_1=local-zfs
NETWORK_IFACES_1=vmbr0, vmbr1

NODE_2=fun-bedbug
STORAGE_2=local-zfs
CPU_RATIO_2=0.6
MEMORY_RATIO_2=0.6
IMG_STORAGE_2=local-zfs
NETWORK_IFACES_2=vmbr0

# Add more nodes as needed (NODE_3, NODE_4, etc.)

# IP Addresses (for reference, not directly used in script)
PVE_IPS="192.168.86.194, 192.168.1.122, 192.168.4.122, 10.10.10.1"

# K3s Cluster Configuration
# IP address of an existing k3s node to retrieve join token from
