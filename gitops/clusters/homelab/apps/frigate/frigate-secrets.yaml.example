# Frigate Credentials Secret Template
# DO NOT COMMIT WITH REAL VALUES - This is a reference template only
#
# Create the secret manually:
#   kubectl create secret generic frigate-credentials -n frigate \
#     --from-literal=FRIGATE_MQTT_PASSWORD='your-mqtt-password' \
#     --from-literal=FRIGATE_CAM_MJPEG_USER='admin' \
#     --from-literal=FRIGATE_CAM_MJPEG_PASS='your-mjpeg-password' \
#     --from-literal=FRIGATE_CAM_TRENDNET_USER='admin' \
#     --from-literal=FRIGATE_CAM_TRENDNET_PASS='your-trendnet-password' \
#     --from-literal=FRIGATE_CAM_REOLINK_USER='frigate' \
#     --from-literal=FRIGATE_CAM_REOLINK_PASS='your-reolink-password'
#
# Or apply this file after filling in real values (then delete local copy):
#   kubectl apply -f frigate-secrets.yaml
#   rm frigate-secrets.yaml  # Don't leave credentials on disk

apiVersion: v1
kind: Secret
metadata:
  name: frigate-credentials
  namespace: frigate
type: Opaque
stringData:
  # MQTT broker credentials (Home Assistant)
  FRIGATE_MQTT_PASSWORD: "CHANGE_ME"

  # Old IP Camera (192.168.1.220) - MJPEG cam
  FRIGATE_CAM_MJPEG_USER: "admin"
  FRIGATE_CAM_MJPEG_PASS: "CHANGE_ME"

  # Trendnet IP-572W (192.168.1.107)
  FRIGATE_CAM_TRENDNET_USER: "admin"
  FRIGATE_CAM_TRENDNET_PASS: "CHANGE_ME"

  # Reolink Doorbell (192.168.1.158)
  FRIGATE_CAM_REOLINK_USER: "frigate"
  FRIGATE_CAM_REOLINK_PASS: "CHANGE_ME"
