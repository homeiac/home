# REFERENCE ONLY - SMTP credentials for health checker email notifications
# This secret should be copied from monitoring namespace (not stored in git)
#
# CREATE THE SECRET:
#   kubectl get secret smtp-credentials -n monitoring -o yaml | \
#     sed 's/namespace: monitoring/namespace: frigate/' | \
#     kubectl apply -f -
#
# OR manually:
#   kubectl create secret generic smtp-credentials \
#     --from-literal=user='your-email@yahoo.com' \
#     --from-literal=pass='your-app-password' \
#     -n frigate
#
# VERIFY:
#   kubectl get secret smtp-credentials -n frigate

apiVersion: v1
kind: Secret
metadata:
  name: smtp-credentials
  namespace: frigate
type: Opaque
stringData:
  user: "your-email@yahoo.com"
  pass: "your-yahoo-app-password"
