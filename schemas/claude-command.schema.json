{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://homelab/schemas/claude-command.schema.json",
  "title": "Claude Code Command",
  "description": "Command sent TO Claude Code from devices, published to claude/command",
  "type": "object",
  "required": ["source", "server", "type"],
  "properties": {
    "source": {
      "type": "string",
      "enum": ["voice_pe", "atoms3r", "puck", "cardputer", "ha_automation"],
      "description": "Device/source that sent the command"
    },
    "server": {
      "type": "string",
      "enum": ["home", "work"],
      "description": "Target Claude Code server"
    },
    "type": {
      "type": "string",
      "enum": ["chat", "action", "ack", "refresh"],
      "description": "Command type"
    },
    "message": {
      "type": "string",
      "description": "Chat message or query (required for type=chat)"
    },
    "action": {
      "type": "string",
      "enum": ["cancel_task", "retry_task", "dismiss_notification"],
      "description": "Action to perform (required for type=action)"
    },
    "task_id": {
      "type": "string",
      "description": "Task ID for acknowledgment or action"
    },
    "notification_id": {
      "type": "string",
      "description": "Notification ID for dismissal"
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": { "type": { "const": "chat" } }
      },
      "then": {
        "required": ["message"]
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "action" } }
      },
      "then": {
        "required": ["action"]
      }
    }
  ],
  "examples": [
    {
      "source": "voice_pe",
      "server": "home",
      "type": "chat",
      "message": "What is the git status?"
    },
    {
      "source": "puck",
      "server": "home",
      "type": "refresh"
    },
    {
      "source": "cardputer",
      "server": "home",
      "type": "chat",
      "message": "deploy frigate to k8s"
    },
    {
      "source": "puck",
      "server": "home",
      "type": "ack",
      "task_id": "task_1234"
    },
    {
      "source": "puck",
      "server": "home",
      "type": "action",
      "action": "dismiss_notification",
      "notification_id": "notif_5678"
    }
  ]
}
