{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://homelab/schemas/presence-detected.schema.json",
  "title": "Presence Detection Event",
  "description": "Presence/face detection event published to presence/{device}/detected",
  "type": "object",
  "required": ["person", "confidence", "camera", "timestamp"],
  "properties": {
    "person": {
      "type": "string",
      "description": "Name of detected person or 'unknown'"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Detection confidence score (0-1)"
    },
    "camera": {
      "type": "string",
      "description": "Camera/location identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of detection"
    },
    "frigate_event_id": {
      "type": "string",
      "description": "Optional Frigate event ID for correlation"
    },
    "thumbnail_url": {
      "type": "string",
      "format": "uri",
      "description": "Optional URL to detection thumbnail"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "person": "G",
      "confidence": 0.95,
      "camera": "living_room",
      "timestamp": "2025-12-14T10:30:00Z"
    },
    {
      "person": "unknown",
      "confidence": 0.78,
      "camera": "front_door",
      "timestamp": "2025-12-14T14:22:30Z",
      "frigate_event_id": "1702500123.456",
      "thumbnail_url": "http://frigate.homelab/api/events/1702500123.456/thumbnail.jpg"
    }
  ]
}
